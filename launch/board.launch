<?xml version="1.0" ?>


<launch>

	<!-- Launch objects bafgile -->
	<arg name="path" default="$(find apriltags_ros_demo)/bags/" />
	<arg name="bag_name" default="board" />
	<node pkg="rosbag" type="play" name="player" output="screen" args="--clock -l $(arg path)$(arg bag_name).bag"/>

	<!-- Launch AR Marker detector -->
  <node pkg="apriltags_ros" type="apriltag_detector_node" name="apriltag_detector" output="screen">
    <!-- Remap topic required by the node to custom topics -->

    <remap from="image_rect" to="/camera/rgb/image_raw" />
    <remap from="camera_info" to="/camera/rgb/camera_info" />

    <!-- Optional: Subscribe to the compressed stream-->

    <param name="image_transport" type="str" value="compressed" />

    <!-- Select the tag family: 16h5, 25h7, 25h9, 36h9, or 36h11-->
    <param name="tag_family" type="str" value="36h11" />

    <!-- Enable projected optical measurements for more accurate tag transformations -->
    <param name="projected_optics" type="bool" value="true" />


    <!-- Describe the tags -->
    <rosparam param="tag_descriptions">[
      {id: 0, size: 0.163513, frame_id: id0},
      {id: 1, size: 0.163513, frame_id: id1},
      {id: 2, size: 0.163513, frame_id: id2},
      {id: 3, size: 0.163513, frame_id: id3},
      {id: 4, size: 0.163513, frame_id: id4},
      {id: 5, size: 0.163513, frame_id: id5},
      {id: 6, size: 0.163513, frame_id: id6},
      {id: 7, size: 0.163513, frame_id: id7}]
    </rosparam>
  </node>
</launch>
